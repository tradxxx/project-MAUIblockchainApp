<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBlockchain.CreateBlockPage"
             Title="Создание нового блока">

    <StackLayout>
        <Label x:Name="errorView" Text=""/>
        <Entry x:Name="AmountEntry"
               Text="{Binding Amount}"
               Placeholder="Сумма"/>
        <Label x:Name="labelIPHost"
                Text="IP-Host: "
               FontSize="Title"
               TextColor="DarkOrange"
                Margin="10"/>
        <Entry x:Name="DescriptionEntry"
               Text="{Binding Description}"
               Placeholder="Описание"/>
        
        <!--<Picker x:Name="pickerCategories" Title="Select Category"
                ItemsSource="{Binding categories}"
                ItemDisplayBinding="{Binding Title}"/>-->
        
        <Entry x:Name="СategoryEntry"
               Text="{Binding Сategory}"
               Placeholder="Категория"/>

        <Entry x:Name="UserEntry"
               Text="{Binding User}"
               Placeholder="Пользователь"/>
        <Button Text="Отправить"
                Clicked="SendFromData"/>

        <Label x:Name="sendView" Text=""/>
    </StackLayout>
</ContentPage>